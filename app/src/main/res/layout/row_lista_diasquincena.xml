<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp" >

	<TextView
	    android:id="@+id/tv_fecha_quincena"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:text="15-15-2015"
	    android:textAppearance="?android:attr/textAppearanceLarge" />

	<TextView
	    android:id="@+id/tv_num_quincena"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/tv_fecha_quincena"
	    android:text=""
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textColor="#2E9AFE" />


	<TextView
	    android:id="@+id/tv_titulo_quincena"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
	    android:text="Total: $ 70.2"
		android:layout_below="@+id/tv_row_detpendientes_dia"
		android:layout_toLeftOf="@+id/tv_num_quincena"
		android:layout_toStartOf="@+id/tv_num_quincena" />

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/img_candado_dia"
		android:layout_below="@+id/tv_num_quincena"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:src="@drawable/open" />

	<TextView
		android:id="@+id/tv_row_detpendientes_dia"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="50"
		android:layout_below="@+id/tv_num_quincena"
		android:layout_marginLeft="10dp"
		android:layout_toRightOf="@+id/img_candado_dia"
		android:layout_toEndOf="@+id/img_candado_dia" />


</RelativeLayout>